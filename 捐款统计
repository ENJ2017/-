#include<stdio.h>
#define SUM 100000
int main()
{ 
    int a;
	float b,tol,ave;
	for(a=1,tol=0;a<=1200;a++) //tol=0
	{
    	printf("plz enter number");
    	scanf("%f",&b);
	    tol=tol+b;            
	    if(tol>=SUM)
	        break;
	}
	ave=tol/a;
	printf("num%d,averge%f,toteol%f",a,ave,tol);
	return 0;
}
